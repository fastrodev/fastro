{
  "lock": false,
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "react": "npm:react@^19.2.4",
    "react/jsx-runtime": "npm:react@^19.2.4/jsx-runtime",
    "react/jsx-dev-runtime": "npm:react@^19.2.4/jsx-dev-runtime",
    "react-dom": "npm:react-dom@^19.2.4",
    "react-dom/server": "npm:react-dom@^19.2.4/server",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "esbuild": "npm:esbuild@0.25.3",
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/path": "jsr:@std/path@^1.0.8",
    "tailwindcss": "npm:tailwindcss@^4.1.18",
    "@tailwindcss/postcss": "npm:@tailwindcss/postcss@^4.1.18",
    "postcss": "npm:postcss@^8.5.6",
    "autoprefixer": "npm:autoprefixer@^10.4.23",
    "cssnano": "npm:cssnano@^7.1.2"
  },
  "compilerOptions": {
    "lib": [
      "deno.worker",
      "deno.unstable",
      "deno.ns",
      "deno.window",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "npm:@types/react@^19",
      "npm:@types/react-dom@^19"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "FASTRO_ENV=development deno run -A build/watch.ts & FASTRO_ENV=development deno run -A --unstable-kv --watch app/main.ts 3000",
    "start": "ENV=production deno run -A --unstable-kv --watch app/main.ts 3000",
    "test": "bash ./scripts/test.sh",
    "lint": "deno lint",
    "cov": "bash ./scripts/test.sh --coverage",
    "bench": "bash ./scripts/run_bench.sh",
    "gen-manifest": "deno run -A scripts/generate_manifest.ts",
    "build": "FASTRO_ENV=production deno run -A scripts/generate_manifest.ts && deno task build:css",
    "build:css": "postcss ./static/css/tailwind.css -o ./public/css/app.css --env production"
  }
}
