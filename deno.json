{
  "lock": false,
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exports": {
    ".": "./mod.ts"
  },
  "imports": {
    "react": "npm:react@^19.2.4",
    "react/jsx-runtime": "npm:react@^19.2.4/jsx-runtime",
    "react/jsx-dev-runtime": "npm:react@^19.2.4/jsx-dev-runtime",
    "react-dom": "npm:react-dom@^19.2.4",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "@std/assert": "jsr:@std/assert@^1.0.16"
  },
  "compilerOptions": {
    "lib": [
      "deno.worker",
      "deno.unstable",
      "deno.ns",
      "deno.window",
      "dom"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": [
      "npm:@types/react@^19",
      "npm:@types/react-dom@^19"
    ]
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run -A --watch=static/,routes/,core/ --env --unstable-kv main.ts 3000",
    "start": "ENV=production deno run -A --env --unstable-kv main.ts 3000",
    "test": "deno test --allow-net --allow-read --allow-write core/*.test.ts",
    "cov": "rm -rf cov_profile && deno test --allow-net --allow-read --allow-write --coverage=cov_profile core/*.test.ts && deno coverage cov_profile --include=\"core/\" && rm -rf cov_profile",
    "bench": "./run_bench.sh"
  }
}
